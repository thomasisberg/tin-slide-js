{
    "name": "tin-slide",
    "version": "0.1.24",
    "description": "Dependency-free content slider for Javascript",
    "main": "./dist/tin-slide.js",
    "files": [
        "dist/",
        ".bower.json",
        "LICENSE",
        "package.json",
        "README"
    ],
    "scripts": {
        "build": "npm run build:dev && npm run build:prod",
        "build:dev": "babel src/js/tin-slide.js -d dist --source-maps",
        "build:prod": "babel src/js/tin-slide.js --out-file dist/tin-slide.min.js --presets minify --source-maps",
        "test": "echo \"Error: no test specified\" && exit 1",
        "release": "npm version patch && git push && git push --tags && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thomasisberg/tin-slide-js.git"
    },
    "author": "Thomas Isberg",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/thomasisberg/tin-slide-js/issues"
    },
    "homepage": "https://github.com/thomasisberg/tin-slide-js#readme",
    "devDependencies": {
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.5",
        "@babel/preset-env": "^7.16.11",
        "babel-preset-minify": "^0.5.1"
    }
}
